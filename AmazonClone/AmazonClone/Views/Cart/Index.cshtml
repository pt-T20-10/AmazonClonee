
  @model IEnumerable<AmazonClone.Areas.Admin.Models.Cart>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="checkout-container">
    <h2>Review your order</h2>

    <!-- Cart Items Section -->
    <div class="cart-items">
        @foreach (var item in Model)
        {
            // Sử dụng item.CartItems nếu bạn có thuộc tính CartItems trong Cart
            foreach (var cartItem in item.CartItems)
            {
                var product = cartItem.Product;
                <div class="cart-item">
                    <div class="delivery-date">
                        Delivery date: @DateTime.Now.AddDays(7).ToString("dddd, MMMM dd")
                    </div>
                    <div class="cart-item-details">
                        <img src="@product.Image" alt="@product.Name" class="product-image" />
                        <div class="product-details">
                            <h3 class="product-name">@product.Name</h3>
                            <p class="product-price">Price: $@product.PriceCents</p>
                            <div class="product-quantity">
                                <span>Quantity: @cartItem.ProductQuantity</span>
                                <a href="#" class="link-primary">Update</a>
                                <a href="#" class="link-primary">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Remaining sections remain the same -->
    ...
</div>
