@model AmazonClone.Areas.Admin.Models.Cart

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this cart?</h3>
<div>
    <h4>Cart Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Delivery Option
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryOptionId)
        </dd>

        <dt class="col-sm-2">
            Products in Cart
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var cartItem in Model.CartItems)
                {
                    <li>
                        <strong>Product:</strong> @cartItem.Product.Name <br />
                        <strong>Quantity:</strong> @cartItem.Quantity
                    </li>
                }
            </ul>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CartId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
