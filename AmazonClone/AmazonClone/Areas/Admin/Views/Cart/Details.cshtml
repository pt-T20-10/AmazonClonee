@model AmazonClone.Areas.Admin.Models.Cart

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Cart Details</h1>

<div>
    <h4>Cart</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Delivery Option
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryOption)
        </dd>

        <dt class="col-sm-2">
            Products in Cart
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var cartItem in Model.CartItems)
                {
                    <li>
                        <strong>Product:</strong> @cartItem.Product.Name <br />
                        <strong>Quantity:</strong> @cartItem.Quantity
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.CartId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
