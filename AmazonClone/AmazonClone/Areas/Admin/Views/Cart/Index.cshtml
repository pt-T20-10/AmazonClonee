@model IEnumerable<AmazonClone.Areas.Admin.Models.Cart>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CartId)
            </th>
            <th>
                Delivery Date
            </th>
            <th>
                Products
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CartId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryOption)
                </td>
                <td>
                    <ul>
                        @foreach (var cartItem in item.CartItems)
                        {
                            <li>
                                Product: @cartItem.Product.Name - Quantity: @cartItem.Quantity
                            </li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CartId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CartId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CartId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
